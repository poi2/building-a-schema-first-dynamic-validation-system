# Database Configuration
# Use localhost:5433 when connecting from your host machine (outside Docker).
# Services running inside docker-compose should use the database service name (e.g. db:5432).
CELO_DB_URL=postgres://postgres:postgres@localhost:5433/isr?sslmode=disable

# Service Ports
CELO_PORT=50051

# ISR Configuration (for BE service)
CELO_ISR_URL=localhost:50051

# BFF Configuration (for FE service)
CELO_BFF_URL=http://localhost:3001

# Backend Configuration (for BFF service)
CELO_BE_URL=http://localhost:50052
